<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">
	
		
		<update id = "updatecate" parameterType = "com.javaex.vo.CateVo">
			update category
			SET  cateName = #{cateName} , description= #{description}
			WHERE userNo = #{userNo}
		</update>
		
		<insert id = "createcate" parameterType ="map">
			insert into category 
			values (seq_category_cateNo.nextval, #{userNo} , #{defaultCategory} ,  #{defaultDesc}  , sysdate  )
		</insert>
		<select id ="selectCategoryListByUserNo" parameterType ="int">
		<![CDATA[
			SELECT	cateNo
				 , userNo
				 , cateName
				 , description
			FROM category
			WHERE userNo = #{userNo}
		]]>
	</select>
		
</mapper>